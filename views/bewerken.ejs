<%- include('./partials/head') %>

<section id="smartzones">
  <h1><%= title %></h1>
  <p>
    Hier is een overzicht met smartzones. Je kan ook smartzones sorteren
    op alle smartzones, naam, functie, stad en locatie.
  </p>
</section>

<article class="smartzone-buttons">
  <a class="button-post" href="/toevoegen">Smart zone toevoegen</a>
  <button class="toggle-form-put">Smart zone bewerken</button>
  <button class="toggle-form-delete">Smart zone verwijderen</button>
</article>

<form action="https://codingthecurbs.api.fdnd.nl/v1/smartzone" method="post">
  <h2 class="style-h3">Smart zone bewerken</h2>
  <div>
    <label for="smartzoneId">SmartzoneId</label>
    <input type="number" name="smartzoneId" />
  </div>
  <div>
    <label for="name">Naam</label>
    <input type="text" name="name" />
  </div>
  <div>
    <label for="town">Stad</label>
    <input type="text" name="town" />
  </div>
  <div>
    <label for="location">Locatie</label>
    <input type="text" name="location" />
  </div>
  <div>
    <label for="function">Functie</label>
    <input type="text" name="function" />
  </div>
  <div>
    <label for="time">Tijdstip</label>
    <input type="text" name="time" />
  </div>
  <div>
    <label for="size">Grootte (plek)</label>
    <input type="text" name="size" />
  </div>
  <div>
    <label for="utilization">Gebruik (%)</label>
    <input type="text" name="utilization" />
  </div>
  <div>
    <label for="description">Omschrijving</label>
    <input type="text" name="description" />
  </div>
  <div>
    <label for="image">Foto (url)</label>
    <input type="text" placeholder="https://foto.com" name="image" />
  </div>
  <div class="form-buttons">
    <button type="submit">Toevoegen</button>
    <button type="reset">Annuleren</button>
  </div>
</form>

<article class="sorting">
  <a class="white-button" href="/">Terug naar smart zones</a>
  <select class="select-name" onChange="window.location.href=this.value">
    <option value="/">Filter op naam</option>
    <% smartzones.forEach((smartzone) => { %>
    <option value="/name/<%- smartzone.smartzoneId %>"><%- smartzone.name %></option>
    <% }) %>
  </select>
</article>

<section class="tables">
  <% smartzones.forEach((smartzone) => { %>
    <table>
      <tbody><tr>
          <th>Naam</th>
          <td><%- smartzone.name %></td>
      </tr>
      <tr>
          <th>Stad</th>
          <td><%- smartzone.town %></td>
      </tr>
      <tr>
          <th>Locatie</th>
          <td><%- smartzone.location %></td>
      </tr>
      <tr>
          <th>functie</th>
          <td><%- smartzone.function %></td>
      </tr>
      <tr>
          <th>Tijdstip</th>
          <td><%- smartzone.time %></td>
      </tr>
      <tr>
          <th>Grootte (plek)</th>
          <td><%- smartzone.size %></td>
      </tr>
      <tr>
          <th>Gebruik (%)</th>
          <td><%- smartzone.utilization %></td>
      </tr>
      <tr>
          <th>Omschrijving</th>
          <td><%- smartzone.description %></td>
      </tr>
      </tbody></table>
      <img src="<%- smartzone.image %>" alt="Google maps afbeelding">
  <% }) %>
</section>

<%- include('./partials/foot') %>