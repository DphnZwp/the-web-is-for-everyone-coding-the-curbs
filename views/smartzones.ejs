<%- include('./partials/head') %>

<section id="smartzones">
  <h1><%= title %></h1>
  <p>
    Hier is een overzicht met smartzones. Je kan ook smartzones sorteren
    op alle smartzones, naam, functie, stad en locatie.
  </p>
</section>

<article class="smartzone-buttons">
  <a class="button-post" href="/add">Smart zone toevoegen</a>
  <a class="button-put" href="/edit">Smart zone bewerken</a>
  <a class="button-delete" href="/remove">Smart zone verwijderen</a>
</article>

<article class="sorting">
  <a class="white-button left-arrow" href="/">Terug naar smart zones</a>
  <select class="select-name" onChange="window.location.href=this.value">
    <option value="/">Filter op naam</option>
    <% smartzones.forEach((smartzone) => { %>
    <option value="/smartzones/name/<%- smartzone.smartzoneId %>"><%- smartzone.name %></option>
    <% }) %>
  </select>
  <select class="select-function">
    <option>Sorteer op functie</option>
    <option>Deelmobiliteit</option>
    <option>Laden en lossen</option>
    <option>Laden en lossen Parkeren Deelmobiliteit</option>
    <option>Laden en lossen Recreatie</option>
  </select>
  <select class="select-town">
    <option>Sorteer op stad</option>
    <option>Amsterdam</option>
    <option>Rotterdam</option>
    <option>Schiedam</option>
    <option>Utrecht</option>
  </select>
</article>

<section class="tables">
  <% smartzones.forEach((smartzone) => { %>
    <table>
      <tbody><tr>
          <th>Naam</th>
          <td><%- smartzone.name %></td>
      </tr>
      <tr>
          <th>Stad</th>
          <td><%- smartzone.town %></td>
      </tr>
      <tr>
          <th>Locatie</th>
          <td><%- smartzone.location %></td>
      </tr>
      <tr>
          <th>functie</th>
          <td><%- smartzone.function %></td>
      </tr>
      <tr>
          <th>Tijdstip</th>
          <td><%- smartzone.time %></td>
      </tr>
      <tr>
          <th>Grootte (plek)</th>
          <td><%- smartzone.size %></td>
      </tr>
      <tr>
          <th>Gebruik (%)</th>
          <td><%- smartzone.utilization %></td>
      </tr>
      <tr>
          <th>Omschrijving</th>
          <td><%- smartzone.description %></td>
      </tr>
      </tbody></table>
      <img src="<%- smartzone.image %>" alt="Google maps afbeelding">
  <% }) %>
</section>

<%- include('./partials/foot') %>